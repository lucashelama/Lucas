<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TABELA PURA</title>
</head>
<body>
    
    <table>
        <tr>
            <th>Produtos</th>
            <th>Quantidade</th>
            <th>Preço Unitário</th>
            <th>Preco total</th>
        </tr>
        <tr>
            <td>ProdutoA</td>
            <td><input onmouseleave ="pr1()" type="number" id="quant1"></input></td>
            <td><div id="valor1">20</div></td>
            <td><div id="result1"></div></td>
        </tr>
        <tr>
            <td>ProdutoB</td>
            <td><input onmouseleave ="pr2()" type="number" id="quant2"></input></td>
            <td><div id="valor2">30</div></td>
            <td><div id="result2"></div></td>
        </tr>
    </table>
        <button id="fim" onclick="total()" type="button">TOTAL</button>

        

    <script>
        
            var pA = document.querySelector('#valor1');
            pA = 20
            var pB = document.querySelector('#valor2');
            pB = 30

            
            var n1 = document.querySelector('#quant1');
            var n2 = document.querySelector('#quant2');
            
            
            var resultado1 = document.querySelector ('#result1');
            var resultado2 = document.querySelector ('#result2');

            var final = document.querySelector ('#fim');

            function pr1 () {
           resultado1.innerHTML = (pA) * parseInt(n1.value)
        }
            function pr2 () {
           resultado2.innerHTML = (pB) * parseInt(n2.value)
        }   
            function total () {
            
                final.innerHTML = 
                (pA) * parseInt(n1.value) + 
                (pB) * parseInt(n2.value)

            }
           
           
        </script>

</body>
</html>
